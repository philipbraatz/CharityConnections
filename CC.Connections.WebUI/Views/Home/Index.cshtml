<style>

    .carousel-container p {
        color: #66ccff;
    }
</style>



<div class="carousel-container">
    <p class="lead">Helping volunteers and charity groups to connect and create stronger communities.</p>
    <div id="demo" class="carousel slide  w-50 ml-auto mr-auto" data-ride="carousel">

        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
            <li data-target="#demo" data-slide-to="3"></li>
        </ul>

        <!-- The slideshow -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100"  src="~/Content/Images/raking.jpg" alt="raking leaves" height="400">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100"  src="~/Content/Images/volunteer_large_group.jpg" alt="line of volunteers smiling" height="400" >
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/Images/pet_volunteer.jpg" alt="pet shaking hands with volunteer" height="400" >
            </div>
            <div class="carousel-item">
                <img  class="d-block w-100" src="~/Content/Images/school_volunteer.jpg" alt="volunteer reading in school" height="400">
            </div>
        </div>



        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>

    </div> 
</div>
<!--end of carousel code-->


