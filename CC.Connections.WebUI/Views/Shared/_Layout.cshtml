        <li class="nav-item col-1 volunteer-category-bar" id="book" title="Education"><a class="nav-fill" href="@Url.Action("CategoryView","CharityEvent",new { id =2})"><img src="~/Content/Images/book.svg" /></a></li>
        <li class="nav-item col-1 volunteer-category-bar" id="health" title="Hospice"><a class="nav-fill" href="@Url.Action("CategoryView","CharityEvent",new { id =3})"><img src="~/Content/Images/health.svg" /></a></li>
        <li class="nav-item col-1 volunteer-category-bar" id="people" title=""><a class="nav-fill" href="@Url.Action("CategoryView","CharityEvent",new { id =4})"><img src="~/Content/Images/people.svg" /></a></li>
        <li class="nav-item col-1 volunteer-category-bar" id="tree" title="Environment"><a class="nav-fill" href="@Url.Action("CategoryView","CharityEvent",new { id =5})"><img src="~/Content/Images/tree.svg" /></a></li>
        <li class="nav-item col-1 volunteer-category-bar" id="hands" title="Community"><a class="nav-fill" href="@Url.Action("CategoryView","CharityEvent",new { id =6})"><img src="~/Content/Images/hands.svg" /></a></li>
            -->
                    </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
