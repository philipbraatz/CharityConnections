@model CC.Connections.BL.Charity

@{
    ViewBag.Title = "CharityView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />

<style>
    a:hover {
        color: #FF6633;
        text-decoration: none;
    }
</style>
<h4>Charity Profile</h4>


<table class="table table-user-information">
    <tbody>
        <tr>
            <td>Charity Name:</td>
            <td>@Model.CharityName</td>
        </tr>
        <tr>
            <td>Charity Email:</td>
            <td>@Model.ContactInfo_Email</td>
        </tr>
        <tr>
            <td>Phone:</td>
            <td>@Model.ContactInfo_Phone</td>
        </tr>
        <tr>
            <td>Address</td>
            <td>@Model.Deductibility</td>
        </tr>

    </tbody>
</table>

<br />
<br />
<table>
    <tr>
        <td>
            @Html.ActionLink("Edit Profile", "Edit", new { id = Model.contact_ID })
        </td>
        <td>
            @Html.ActionLink("Delete Profile", "Delete", new { id = Model.contact_ID })
        </td>
    </tr>
</table>




