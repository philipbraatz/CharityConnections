@model IEnumerable<Doorfail.Connections.PL.Charity>
@section Scripts
{
    <script src="@Url.Content("~/Scripts/connectionsScripts/administration.js")"></script>
}
@{
    ViewBag.Title = "Charity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Charity</h2>

<p>Click cell to copy</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EIN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deductibility)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cause)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocationID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EIN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deductibility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cause)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CharityEmail }) |
                @Html.ActionLink("Details", "Details", new { id = item.CharityEmail }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CharityEmail })
            </td>
        </tr>
    }

</table>