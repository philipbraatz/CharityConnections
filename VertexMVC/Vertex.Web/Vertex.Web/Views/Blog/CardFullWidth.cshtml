
@(Html.Vertex().Page()
        .Title("Blog | Card Full Width Sidebar")
        .Footer()
        .Header(header => { 
            header.ShowTopbar(true);
            header.Nav(DemoMenu.GetDemoMenu()); 
        }) 
)



@Html.Vertex().Section().Overlay(5).Src("../Content/img/hero/h13.jpg").SectionType(SectionType.ParallaxImage).ContentTemplate(@<text>

    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-12 text-white">
                <div class="clearfix">
                    @Html.Vertex().Breadcrumb().Transparent()
                    <h1 class="fw-600 fs-45">Card Full Width Sidebar</h1>
                    <p class="lead mb-5">
                        We are going global <strong class="m-link-light">#LoveToVertex</strong> .
                        To make it happen we are looking for fresh,<br /> ambitious talent to join our cause.
                    </p>
                    <a href="#read-all" class="btn btn-light btn-sm transition-hover pr-4 pl-4">Read all news</a>
                </div>
            </div>
        </div>
    </div>

</text>)



@Html.Vertex().Section().BgColor(BootstrapColor.Light).ContentTemplate(@<text>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                @Html.Vertex().BlogPosts(BlogPostViewName.Card).Pageable(6)

            </div>
        </div>
    </div>

</text>)

 
